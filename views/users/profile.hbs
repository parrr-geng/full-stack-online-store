{{#if userInSession}}
<div class="text-2xl">MY ACCOUNT</div>
<br>
<div class="grid grid-cols-3">
    <div class="col-span-2">
        <p class="my-5">MY LISTINGS</p> 
        {{#each products}}
            <br>
            <div class="grid grid-cols-3">
                <div class="col-span-1">
                    <a href="/products/{{_id}}"><img class="w-48" src="{{imgPath}}" alt="Photo for {{name}}"></a>
                </div>
                <div class="col-span-1">
                    <h2 class="mt-4">{{title}}</h2>
                    <h4>{{description}}</h4>
                </div>
                <div class="col-span-1">
                    <a href="products/{{_id}}/delete">üóëÔ∏è</a>
                </div>
            </div>

        {{else}}
            <h2>There are no listings yet.</h2>
        {{/each}} 
        <br>
        <button class="border space-x-3 items-center px-3 py-2"><a href="/profile/add-product">ADD A LISTING</a></button>
    </div>
    <div class="col-span-1">
        <h2>ACCOUNT DETAILS</h2>
        <h2>Hi {{userInSession.firstName}}!</h2>
        <h2>Email:{{userInSession.email}}</h2>
        <h2>Manage Your Addresses</h2>
        <a href="/logout">Logout</a>
    </div>
    
</div>
{{else}}
    <div>You're not logged in yet!</div>
{{/if}}
