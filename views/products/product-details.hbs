<div class="grid grid-cols-2 gird-flow-row">
  
    <img class="h-auto" src={{product.image}} alt={{product.title}}>
    
    <div class="flex flex-col justify-between">
        <div class="">
            <h2 class="text-l">{{product.title}}</h2>
            <br>
            <h2>DESCRIPTION</h2>
            <p>{{product.description}}</p>
            <p>Reviews: {{product.rating}}/10</p>
        </div>
        <div class="h-12 mb-12">
            <p>${{product.price}}</p>
            <form action="/products/{{product._id}}/togglecart" method="POST">
                <button type="submit">ADD TO CART</button>
            </form>
            <a class="" href="/products/all">Back</a>
        </div>
    </div>
   
    
</div>
