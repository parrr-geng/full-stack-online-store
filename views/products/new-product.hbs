<h2 class="text-2xl m-2">CREATE A NEW LISTING</h2>
<br>
{{#if userInSession}}

<div class="grid grid-cols-2">
    <div>
        <form class="flex flex-col" action="/profile/add-product" method="POST" enctype="multipart/form-data">
            <input type="text" name="title" placeholder="TITLE">
            <br>
            <input type="number" name="price" placeholder="PRICE">
            <br>
            <textarea rows="6" name="description" placeholder="DESCRIPTION"></textarea>
            <br>
            <select name="category">        
                <option value="sports">SPORTS</option>
                <option value="men's clothing">MEN</option>
                <option value="women's clothing">WOMEN</option>
                <option value="kids clothing">KIDS</option>
            </select>
            <br>
            <input type="file" name="productImage">
            <br>
            <div class="block">
                <button type="submit">ADD</button>
            </div>  
        </form>
    </div>
    <div></div>
</div>

{{#if message}}
<h4>{{message}}</h4>
{{/if}}

{{else}}
    <div>You're not logged in yet!</div>
{{/if}}