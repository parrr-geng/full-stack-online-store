<div class="grid grid-cols-3 gap-6">
    {{#each products}}
     <div class="relative flex flex-col justify-between">
        <a class="m-5" href="/products/{{_id}}">
            <img class="w-4/5 h-auto" src="{{image}}" alt="product image" >
        </a>
        <div class="flex flex-row justify-between h-12">
            <p>{{title}}</p>
            <p>{{price}}</p>
            {{#each rating}}
                <p>{{rate}}/5</p>
            {{/each}}
        </div>    
     </div>
    {{/each}}
</div>
